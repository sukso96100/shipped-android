<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.youngbin.shipped">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="xyz.youngbin.shipped.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="xyz.youngbin.shipped.activity.AddNewItemActivity"
            android:label="@string/title_activity_add_new_item">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.youngbin.shipped.MainActivity" />
        </activity>

        <receiver
            android:name="xyz.youngbin.shipped.receiver.BootReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name="xyz.youngbin.shipped.service.DataLoader"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="xyz.youngbin.shipped.activity.TrackingDetailsActivity"
            android:label="@string/title_activity_tracking_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.youngbin.shipped.MainActivity" />
        </activity>
    </application>

</manifest>
